{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Web Package TsConfig",
  "extends": "./base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "useDefineForClassFields": true,
    "moduleResolution": "bundler",
    // 定义类型  用来指定需要包含的模块，只有在这里列出的模块声明文件才会被加载进来
    "types": ["vite/client"],
    // 类型声明文件生成关闭
    "declaration": false
  }
}
